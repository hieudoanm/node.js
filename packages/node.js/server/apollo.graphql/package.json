{
  "name": "@graphql/apollo",
  "version": "0.0.1",
  "description": "TypeScript - GraphQL - Apollo",
  "main": "dist/server",
  "repository": "git@github.com:hieudoanm/hieudoanm.git",
  "author": "hieudoanm <hieumdoan@gmail.com> (https://hieudoanm.github.io)",
  "license": "GPL-3.0",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "format": "prettier --cache --write .",
    "serve": "webpack serve --mode=development",
    "dev": "concurrently \"pnpm codegen\" \"pnpm webpack:watch\" \"pnpm dev:nodemon\"",
    "dev:nodemon": "nodemon ./dist/server.js --watch dist",
    "webpack:watch": "webpack --progress --watch",
    "start": "kill-port 5000 && node ./dist/server",
    "prebuild": "pnpm codegen",
    "build": "webpack --mode=production",
    "test": "jest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "codegen": "graphql-codegen --config codegen.ts || true"
  },
  "dependencies": {
    "@apollo/datasource-rest": "6.4.1",
    "@apollo/server": "5.0.0",
    "@graphql-tools/schema": "10.0.25",
    "graphql": "16.11.0",
    "graphql-tag": "2.12.6",
    "pino": "9.9.0"
  },
  "devDependencies": {
    "@eslint/js": "9.34.0",
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-resolvers": "4.5.2",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.0",
    "@webpack-cli/generators": "3.0.7",
    "concurrently": "9.2.1",
    "eslint": "9.34.0",
    "globals": "16.3.0",
    "jest": "30.1.3",
    "kill-port": "2.0.1",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.4.1",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.42.0",
    "webpack": "5.101.3",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2"
  }
}
