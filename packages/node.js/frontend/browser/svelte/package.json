    "@sveltejs/vite-plugin-svelte": "6.2.1",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-svelte": "3.12.4",
    "globals": "16.4.0",
    "prettier": "3.6.2",
    "prettier-plugin-svelte": "3.4.0",
    "prettier-plugin-tailwindcss": "0.6.14",
    "svelte": "5.39.9",
    "svelte-check": "4.3.2",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0",
    "vite": "7.1.9",
    "vitest": "3.2.4"
  }
